<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_recorder_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background0"
    android:orientation="vertical"
    tools:context="com.android.EgLauncher.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0f88ff88"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/voice_angle"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/compass"
                    android:textColor="#0fffffff"/>

                <ImageView
                    android:id="@+id/engine_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spectrum"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="#00ffffff"
                android:orientation="horizontal">
                <View
                    android:id="@+id/scope"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="SpectrumView"
                    android:background="#00000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#5fff8888"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/voice_to_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffffff"
                    android:text="voice to text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#2288ffff"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rec_time"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="#4f88ffff"
                    android:textColor="#ff000000"
                    android:textSize="40dp"
                    android:text="00:00:00" />
                <Button
                    android:id="@+id/rec_start_pause"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button"
                    android:textColor="#ffffffff"
                    android:text="录音" />
                <Button
                    android:id="@+id/rec_stop"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button"
                    android:textColor="#ffffffff"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
